          <dxg:GridColumn Header=" Разница" FieldName="T093_RAZN_SALDO" ReadOnly="True" Width="70">
            <dxg:GridColumn.HeaderTemplate>
              <l:DataTemplate>
                <l:TextBlock Text="{l:Binding}" TextWrapping="Wrap" />
              </l:DataTemplate>
            </dxg:GridColumn.HeaderTemplate>
          </dxg:GridColumn>
          <dxg:GridColumn Header=" Дата предоставления отчета (ДИТ)" FieldName="T093_LOAD_DATE_GCI" ReadOnly="True" Width="120">
