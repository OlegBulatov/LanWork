          <dxg:GridColumn Header=" Дата предоставления отчета (ДПБ)" FieldName="T093_LOAD_DATE_DPB" ReadOnly="True" Width="120">
            <dxg:GridColumn.HeaderTemplate>
              <l:DataTemplate>
                <l:TextBlock Text="{l:Binding}" TextWrapping="Wrap" />
