              </l:DataTemplate>
            </dxg:GridColumn.HeaderTemplate>
          </dxg:GridColumn>
        </dxg:GridControlBand>
        <dxg:GridControlBand Header="Эмитент " HorizontalHeaderContentAlignment="Center">
          <dxg:GridColumn Header=" № стр." FieldName="T203_ROW_NUM" ReadOnly="True" Width="26">
