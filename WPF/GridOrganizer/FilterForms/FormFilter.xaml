<Page
    x:Class="GridOrganizer.FormFilter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GridOrganizer">
    
    <Grid>
        <TextBox Name="tbAssemblyName" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="90,16,0,0" Width="240" IsEnabled="{Binding ElementName=chAssemblyName, Path=IsChecked}" Tag="{}{&quot;DataField&quot;:&quot;assembly_name&quot;,&quot;Predicate&quot;:&quot;like&quot;}">
        </TextBox>
        <TextBox Name="tbTypeName" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="90,50,0,0" Width="240" IsEnabled="{Binding ElementName=chTypeName, Path=IsChecked}" Tag="{}{&quot;DataField&quot;:&quot;type_name&quot;,&quot;Predicate&quot;:&quot;like&quot;}">
        </TextBox>
        <CheckBox Name="chAssemblyName" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,16,0,0" Width="70" Content="сборка" />
        <CheckBox Name="chTypeName" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,50,0,0" Width="60" Content="тип" />
    </Grid>
</Page>
